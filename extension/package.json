{
  "name": "valuascript-language",
  "displayName": "ValuaScript",
  "description": "Language support for the ValuaScript financial modeling language.",
  "publisher": "AlessioMarcuzzi",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:valuascript"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "valuascript",
        "aliases": [
          "ValuaScript"
        ],
        "extensions": [
          ".vs"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/valuascript.svg",
          "dark": "./icons/valuascript.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "valuascript",
        "scopeName": "source.valuascript",
        "path": "./syntaxes/valuascript.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "valuascript",
        "path": "./snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "sync:files": "cp ../README.md ./README.md && cp ../LICENSE ./LICENSE",
    "compile": "npm run sync:files && node ./scripts/build-grammar.js && node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "package": "npm run compile",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^2.29.0",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "get-port": "^7.1.0",
    "typescript": "^5.5.2",
    "vscode-languageclient": "^9.0.1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Alessio2704/monte-carlo-simulator.git"
  }
}
