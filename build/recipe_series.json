{
  "simulation_config": {
    "num_trials": 100000
  },
  "inputs": {
    "base_revenue": {
      "type": "fixed",
      "value": 100.0
    },
    "operating_margin": {
      "type": "fixed",
      "value": 0.25
    },
    "discount_rate": {
      "type": "fixed",
      "value": 0.1
    },
    "revenue_growth_rate": {
      "type": "distribution",
      "dist_name": "PERT",
      "params": {
        "min": 0.03,
        "mostLikely": 0.05,
        "max": 0.08
      }
    },
    "forecast_years": {
      "type": "fixed",
      "value": 5
    }
  },
  "operations": [
    {
      "op_code": "grow_series",
      "args": ["base_revenue", "revenue_growth_rate", "forecast_years"],
      "result": "revenue_series"
    },
    {
      "op_code": "multiply",
      "args": ["revenue_series", "operating_margin"],
      "result": "cash_flow_series"
    },
    {
      "op_code": "npv",
      "args": ["discount_rate", "cash_flow_series"],
      "result": "final_npv"
    }
  ],
  "output_variable": "final_npv"
}
