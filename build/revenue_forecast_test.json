{
  "simulation_config": {
    "num_trials": 100000
  },
  "inputs": {
    "segment_A_base_revenue": { "type": "fixed", "value": 1000.0 },
    "segment_A_growth_rate": {
      "type": "distribution",
      "dist_name": "Normal",
      "params": { "mean": 0.08, "stddev": 0.02 }
    },
    "segment_B_base_revenue": { "type": "fixed", "value": 500.0 },
    "segment_B_growth_rates_by_year": {
      "type": "fixed",
      "value": [0.2, 0.15, 0.12, 0.1, 0.08]
    },
    "forecast_years": { "type": "fixed", "value": 5 }
  },
  "operations": [
    {
      "op_code": "grow_series",
      "args": [
        "segment_A_base_revenue",
        "segment_A_growth_rate",
        "forecast_years"
      ],
      "result": "segment_A_revenue_series"
    },
    {
      "op_code": "compound_series",
      "args": ["segment_B_base_revenue", "segment_B_growth_rates_by_year"],
      "result": "segment_B_revenue_series"
    },
    {
      "op_code": "add",
      "args": ["segment_A_revenue_series", "segment_B_revenue_series"],
      "result": "total_revenue_forecast"
    }
  ],
  "output_variable": "total_revenue_forecast"
}
